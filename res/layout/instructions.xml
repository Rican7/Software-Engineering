<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >   
<TextView 
	    android:text="Character moves left and right based of accelerometer." 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textSize="20dp"
	    android:layout_centerHorizontal="true">
    </TextView>
    <TextView 
	    android:text="Hit pizza slice or energy drink for health boost." 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textSize="20dp"
	    android:layout_centerHorizontal="true">
    </TextView>
    <TextView 
	    android:text=
	    "Energy drink also accelerates game for a few seconds." 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textSize="20dp"
	    android:layout_centerHorizontal="true">
    </TextView>

    <TextView 
	    android:text="Obsticals (rocks and logs) cause you to loose health." 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textSize="20dp"
	    android:layout_centerHorizontal="true">
    </TextView>
        <Button
	        android:text="Done" 
			android:id="@+id/btnexit" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
    	</Button>
</LinearLayout>

